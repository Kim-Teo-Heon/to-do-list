<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link href="stylesheets/todolist.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        <div class="wrap">
            <header>
                <a href="/"> To Do List </a>
            </header>
            <section class="lists-wrap">  

                    <ul class="list">
                        <% for(var i=0; i<todolist.length; i++){ console.log(todolist[i].status) %>
                            <li>
                            <% if(todolist[i].status==='N'){ %>    
                            <form name="form" class='lists-checkbox' action="/status/Y/<%=todolist[i].id%>" method="POST">
                                <input type="hidden" name="status" value="Y">
                                <input type="checkbox" class='list-checkbox' onclick="submit(this)">
                            </form>
                            <span><%=todolist[i].list%></span>
                        <% } else if(todolist[i].status==='Y'){%>
                            <form name="form" class='lists-checkbox' action="/status/N/<%=todolist[i].id%>" method="POST">
                                <input type="hidden" name="status" value="N">
                                <input type="checkbox" class='list-checkbox' onclick="submit(this)" checked>
                            </form>
                            <span class="checked-list-text"><%=todolist[i].list%></span>
                        <% } %>
                            <div class="btns">
                                <form action="/update/<%=todolist[i].id%>" method="GET">
                                    <button type="submit" class="btn">Edit</button>
                                </form>
                                <form action="/delete/<%=todolist[i].id%>" method="post">
                                    <button type="submit" class="btn">Delete</button>
                                </form>
                            </div>
                        </li>
                        <% } %>
                    </ul>
            </section>
            <div class="text-inputbox">
                <form class="add" action="/create" method="POST">
                <input name="list" type="text">
                <div class='btns'>
                    <!-- <input class="add-btn" type="submit" value="Add"> -->
                    <button type="submit" class="add-btn">Add</button>
                    <!-- <div class="add-btn" onclick="">Add</div> -->
                    <div class="edit-btn">Edit</div>
                </div>
                </form>
            </div>
        </div>
    </body>
    <script src="javascripts/todolist.js"></script>
</html>


