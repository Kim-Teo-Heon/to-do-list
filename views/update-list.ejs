<!DOCTYPE html>
<html>

<head>
    <!-- <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link href="stylesheets/todolist.css" rel="stylesheet" type="text/css"> -->
    <%- include('./head') %>
</head>

<body>
    <div class="wrap">
        <header>
            <%- include('./header') %>
        </header>
        <section class="lists-wrap">
            <%- include('./section') %>
        </section>
        <div class="text-inputbox">
            <% for(var i=0; i<todolist.length; i++){ %>
                <% if(todolist[i].id==page_id){ %>
                    <form class="add" action="/update/<%=todolist[i].id%>" method="POST">
                        <input type="hidden" name='id' value='<%=todolist[i].id%>'>
                        <input type='hidden' name='status' value='<%=todolist[i].status %>'>
                        <input name="list" type="text" value="<%=todolist[i].list%>">
                        <% }%>
                            <% } %>
                                <div class='btns'>
                                    <button type="submit" class="add-btn">Edit</button>
                                </div>
                    </form>
        </div>
    </div>

</body>

</html>